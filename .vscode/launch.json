    "version": "0.2.0",
    "configurations": [
        {
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "name": "backend-api",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "services.api.app:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Lokka MCP Server",
            "type": "node-terminal",
            "command": "npx -y @merill/lokka",
            "request": "launch"
        },
        {
            "name": "dev-ui",
            "type": "debugpy",
            "request": "launch",
            "module": "services.devui.app",
            "console": "integratedTerminal"
        }
    ]
}